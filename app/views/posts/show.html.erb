<main role="main">

  <!-- Main jumbotron for a primary marketing message or call to action -->
  <div class="jumbotron">
    <div class="container">
      <h1 class="display-4"><%= @post.title %></h1>
      <p class="text-muted"><em>Posted <%= time_ago_in_words @post.created_at %></em></p>
    </div>
  </div>
</main>

<div class="container">
  <%= simple_format @post.body %>

  <p><%= link_to "View latest blog posts", blog_path %></p>
</div>