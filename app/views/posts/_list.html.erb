<% posts.each do |post| %>
  <div class="col-4">
    <div class="realty border">

      <div class="realty-thumb" style="background-image: url(<%= post_thumbnail_url(post) %>)">
        <%= link_to "", post_path(post) %>
      </div>

      <div class="realty-summary mb-2 p-3">
        <h3 class="h5"><%= link_to post.title, post_path(post), class: "text-dark" %></h3>

        <p class="mt-2"><%= post.summary %></p>
      </div>
    </div>
  </div>
<% end %>