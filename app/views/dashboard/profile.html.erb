<div class="realty-main-photo" style="background-image:url('<%= realty_photo_url @realties.last %>')">
  <div class="photo-overlay">
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="col-md-8">
      <div class="row">
        <div class="col">
          <p class="h4 mb-0"><%= @account.full_name %></p>
          <p class="mb-2"><%= @account.company %></p>
          <p class="text-muted">Registered for <%= time_ago_in_words @account.created_at %></p>
        </div>
      </div>
      <div class="row border-top mt-5 pt-4">
        <div class="col">
          <p class="h5">Realty Description</p>

          <div id="real-details" class="">
            <%= simple_format @account.details %>
          </div>

          <button class="btn btn-outline-info mt-3" id="toggleDetails">Read more</button>
        </div>
      </div>
    </div>
    <div class="col-md-4">
      <%= render "realties/profile_contact_details", agent: @account %>

      <div class="col-md-10 offset-md-1 text-center">
        <div class="row mt-sm-3 bg-light p-3">
          <div class="col-6">
            <p class="lead"><%= @realties_sold %><br />Sold</p>
          </div>
          <div class="col-6">
            <p class="lead"><%= @realties_for_sale %><br />For sale</p>
          </div>
          <div class="col-6">
            <p class="lead"><%= @realties_leased %><br />Leased</p>
          </div>
          <div class="col-6">
            <p class="lead"><%= @realties_for_rent %><br />For rent</p>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<section class="mt-5 mb-5">
    <div class="container">
      <div class="row">
        <div class="col-12">
          <p class="h3 mb-3">View realties by this agent</p>
        </div>
        <%= render "realties/list", realties: @realties %>
      </div>
    </div>
</section>

<%= render "realties/send_email_modal", agent: @account %>
